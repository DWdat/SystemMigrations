//            }
//        }

        $updated = array();

        $removed = array();

        foreach ($new_contexts as $field_name => $new_context) {
            $updated[$field_name] = array();
            $removed[$field_name] = array();

            $old_context = $old_contexts[$field_name];

//            foreach ($old_context as $name => $value) {
//                if (array_key_exists($name, $new_context) && $value != $new_context[$name]) {
//                    $updated[$field_name][$name] = $new_context[$name];
