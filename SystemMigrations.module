//                if (! array_key_exists($name, $old_context) || $value != $old_context[$name]) {
//                    $updated[$field_name][$name] = $value;
//                } else {
//                    if (!empty($old_context[$name])) {
//                        $removed[$field_name][] = $name;
//                    }
//                }
