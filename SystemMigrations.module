     */
    public function hookFieldAdded(HookEvent $event)
    {
        /**
         * @var Field $field
         */

        if (! $this->recording) {
            return; // not recording
        }

        $field = $event->argumentsByName('item');

        $data = $this->getFieldData($field);

        $name = $data['name'];

        unset($data['name']);

        $this->record(
            'addField',
            array(
                'name' => $name,
                'type' => $field->type->name,
                'data' => $data
            )
        );
    }
    
